# Production Environment Configuration for Digital Ocean
# Copy this to .env on your production server and fill in the actual values
# DO NOT commit .env files to version control

# ============================================
# CRITICAL PRODUCTION SETTINGS
# ============================================

# Flask Environment - MUST be 'production'
FLASK_ENV=production

# Security Settings - Generate secure random keys
SECRET_KEY=CHANGE-THIS-TO-A-LONG-RANDOM-STRING-MINIMUM-32-CHARACTERS
SESSION_COOKIE_SECURE=True
REMEMBER_COOKIE_SECURE=True

# ============================================
# PostgreSQL Database Configuration
# ============================================
# Digital Ocean Managed PostgreSQL Database

# Database Host (from Digital Ocean)
POSTGRES_HOST=your-db-host.db.ondigitalocean.com

# Database Port (Digital Ocean default is 25060)
POSTGRES_PORT=25060

# Database User (typically 'doadmin' for Digital Ocean)
POSTGRES_USER=doadmin

# Database Password (from Digital Ocean control panel)
POSTGRES_PASSWORD=YOUR-SECURE-DATABASE-PASSWORD

# Database Name (your NC database)
POSTGRES_DB=nc

# Alternative: Use full connection string from Digital Ocean
# NC_DATABASE_URL=postgresql://doadmin:password@host:25060/nc?sslmode=require

# ============================================
# Admin User Settings
# ============================================
# These are only used for initial admin user creation

ADMIN_USERNAME=admin
ADMIN_EMAIL=your-production-email@domain.com
SECRET=YOUR-SECURE-ADMIN-PASSWORD-HERE

# ============================================
# Application Settings
# ============================================

# Flask runs on port 8080 in production (behind Nginx)
FLASK_PORT=8080

# ============================================
# Security Notes
# ============================================
# 1. Generate SECRET_KEY with: python -c "import secrets; print(secrets.token_hex(32))"
# 2. Use strong, unique passwords for database and admin
# 3. Ensure Digital Ocean PostgreSQL has SSL enabled
# 4. Never use default/development passwords in production
# 5. Regularly rotate credentials
