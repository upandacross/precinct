# Example Environment Configuration File
# Copy this to .env and modify as needed
# DO NOT commit .env files to version control - they contain sensitive information

# Flask Environment (development, production, testing)
FLASK_ENV=development

# Security Settings
SECRET_KEY=your-very-secure-secret-key-here-change-this-in-production
SESSION_COOKIE_SECURE=False
REMEMBER_COOKIE_SECURE=False

# PostgreSQL Database Configuration (NC database)
POSTGRES_HOST=localhost
POSTGRES_PORT=4747
POSTGRES_USER=precinct
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=nc

# Alternative: Provide full database URL (overrides individual components)
# NC_DATABASE_URL=postgresql://precinct:password@localhost:4747/nc

# Admin User Settings (only used for initial setup)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@yourdomain.com
SECRET=your-admin-password-here

# Flask Port Configuration
FLASK_PORT=5000

# Security Headers (production only)
# WTF_CSRF_SSL_STRICT=True

# File Upload Settings
# MAX_CONTENT_LENGTH=16777216  # 16MB in bytes

# Session Settings
# PERMANENT_SESSION_LIFETIME=86400  # 24 hours in seconds

# ============================================
# Examples for different environments:
# ============================================

# DEVELOPMENT SETTINGS:
# FLASK_ENV=development
# POSTGRES_HOST=localhost
# POSTGRES_PORT=4747
# POSTGRES_USER=precinct
# POSTGRES_PASSWORD=bren123
# POSTGRES_DB=nc
# SESSION_COOKIE_SECURE=False
# REMEMBER_COOKIE_SECURE=False
