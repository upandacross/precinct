# Example Environment Configuration File
# Copy this to .env and modify as needed
# DO NOT commit .env files to version control - they contain sensitive information

# Flask Environment (development, production, testing)
FLASK_ENV=development

# Security Settings
SECRET_KEY=your-very-secure-secret-key-here-change-this-in-production
SESSION_COOKIE_SECURE=False
REMEMBER_COOKIE_SECURE=False

# Database Configuration
# For development (SQLite)
DATABASE_URL=sqlite:///app_dev.db

# For production (PostgreSQL example)
# DATABASE_URL=postgresql://username:password@localhost/database_name

# For MySQL example
# DATABASE_URL=mysql://username:password@localhost/database_name

# Admin User Settings (only used for initial setup)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@yourdomain.com
DEFAULT_ADMIN_PASSWORD=change-this-secure-password

# Security Headers (production only)
# WTF_CSRF_SSL_STRICT=True

# File Upload Settings
# MAX_CONTENT_LENGTH=16777216  # 16MB in bytes

# Session Settings
# PERMANENT_SESSION_LIFETIME=86400  # 24 hours in seconds

# Examples for different environments:

# DEVELOPMENT SETTINGS:
# FLASK_ENV=development
# DATABASE_URL=sqlite:///app_dev.db
# SESSION_COOKIE_SECURE=False
# REMEMBER_COOKIE_SECURE=False

# PRODUCTION SETTINGS:
# FLASK_ENV=production
# DATABASE_URL=postgresql://user:pass@host/db
# SESSION_COOKIE_SECURE=True
# REMEMBER_COOKIE_SECURE=True
# SECRET_KEY=your-production-secret-key

# TESTING SETTINGS:
# FLASK_ENV=testing
# DATABASE_URL=sqlite:///:memory: