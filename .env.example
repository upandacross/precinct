# SESSION_COOKIE_SECURE=True
# REMEMBER_COOKIE_SECURE=True
# SECRET_KEY=your-production-secret-key
# SECRET=your-secure-admin-password
# ADMIN_EMAIL=your-production-email@domain.com
# FLASK_PORT=8080

# TESTING SETTINGS:
# FLASK_ENV=testing
# (Testing uses in-memory SQLite, no database config needed)