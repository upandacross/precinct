# PRODUCTION SETTINGS (Digital Ocean):
# FLASK_ENV=production
# POSTGRES_HOST=your-postgres-host
# POSTGRES_PORT=25060
# POSTGRES_USER=doadmin
# POSTGRES_PASSWORD=your-production-password
